@model Fsd_Mvc_Assign.Entities.Person
<div class="container">
    <div class="row border">
        <div class="col-md-6 col-md-offset-3">
            <h3class ="lead">
                Sign up</h3>
                <div id="msgSignup" class="text-danger">
                </div>
                <form id="signupForm">
                    <div class="form-group">
                        <input type="text" name="FullName" id="FullName" class="form-control" placeholder="Full Name" required />
                        <div id="msgFullName">
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="email" name="Email" id="Email" class="form-control" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <input type="text" name="UserId" id="email" class="form-control" placeholder="User Id" required />
                    </div>
                    <div class="form-group">
                        <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" required />
                    </div>
                </form>
                <div class="form-group pull-right">
                    <button type="submit" class="btnbtn-info" onclick="TweetClone.signup()">
                        Signup
                    </button>
                </div>
        </div>
    </div>
</div>
