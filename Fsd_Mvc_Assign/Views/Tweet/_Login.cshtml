@model Fsd_Mvc_Assign.Entities.Person
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h3 class="lead">
                Login
            </h3>
            <div class="text-danger" id="msgLogin" hidden>
                Invalid user id or password
            </div>
            <form id="loginForm">
                <div class="form-group">
                    <input type="text" name="UserId" id="txtUserId" class="form-control" required />
                </div>
                <div class="form-group">
                    <input type="password" name="Password" id="txtPassword" class="form-control" required />
                </div>
            </form>
            <div class="form-group pull-right">
                <button type="submit" id="btnLogin" class="btnbtn-info" onclick="TweetClone.login()">
                    Login
                </button>
            </div>
        </div>
    </div>
</div>
