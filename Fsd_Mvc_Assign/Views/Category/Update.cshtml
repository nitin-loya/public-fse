                            @Html.EditorFor(c => c.Code, new { htmlAttributes = new { @class = "form-control" } })</div>
                        </div>
                        <div class ="row">
                            <div class ="col-md-3">
                                @Html.DisplayNameFor(c => c.Name)</div>
