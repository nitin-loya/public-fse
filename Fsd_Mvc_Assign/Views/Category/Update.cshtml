                                <div class ="col-md-3">
                                    @Html.DisplayNameFor(c => c.Region)</div>
                                <div class ="col">
                                    @Html.EditorFor(c => c.Region, new { htmlAttributes = new { @class = "form-control" } })</div>
                                </div>
                                <div class ="row">
                                    <div class ="col-md-3">
                                        @Html.DisplayNameFor(c => c.Division)</div>
                                    <div class ="col">
                                        @Html.EditorFor(c => c.Division, new { htmlAttributes = new { @class = "form-control" } })</div>
                                    </div>
                                    <div class ="row">
                                        <div class ="col-md-3">
                                            @Html.DisplayNameFor(c => c.SupplierId)</div>
